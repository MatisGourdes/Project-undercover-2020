<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.addSpielerController">
    <children>
        <Button fx:id="addPlayerBtn" layoutX="487.0" layoutY="61.0" mnemonicParsing="false" onAction="#addPlayer" prefHeight="25.0" prefWidth="83.0" text="Add" />
        <TextField fx:id="eingabeName" layoutX="325.0" layoutY="61.0" onAction="#addPlayer" promptText="SpielerName" />
        <Label fx:id="spielerNrLabel" layoutX="325.0" layoutY="36.0" prefHeight="17.0" prefWidth="83.0" text="Spieler Nr" />
        <TextField fx:id="eingabeAnzahlSpieler" layoutX="33.0" layoutY="61.0" onAction="#save" prefHeight="21.0" prefWidth="157.0" promptText="Min.: 4" />
        <Button fx:id="speichern" layoutX="203.0" layoutY="61.0" mnemonicParsing="false" onAction="#save" prefHeight="17.0" prefWidth="83.0" text="Speichern" />
        <TableView fx:id="tableViewSpieler" layoutX="177.0" layoutY="113.0" prefHeight="200.0" prefWidth="247.0">
            <columns>
                <TableColumn fx:id="nrTableView" prefWidth="70.0" text="Spieler Nr" />
                <TableColumn fx:id="nameTableView" prefWidth="175.0" text="Name" />
            </columns>
        </TableView>
      <Button fx:id="startingGame" layoutX="247.0" layoutY="332.0" mnemonicParsing="false" onAction="#startGame" prefHeight="40.0" prefWidth="106.0" text="Start Game" />
      <Label fx:id="spielerAnzahlLabel" layoutX="33.0" layoutY="32.0" prefHeight="25.0" prefWidth="149.0" text="Wie viel sind sie?" />
      <Button layoutX="435.0" layoutY="207.0" mnemonicParsing="false" onAction="#spielerListeLeeren" text="ALLE RAUS " />
    </children>
</AnchorPane>
